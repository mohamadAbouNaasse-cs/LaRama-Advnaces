{
  "name": "larama_backend",
  "version": "1.0.0",
  "description": "LaRama Handcrafted Products E-commerce Platform - Backend API. A comprehensive Node.js/Express RESTful API for managing an e-commerce platform specializing in handcrafted products. Features include user authentication, product catalog management, shopping cart functionality, order processing, and newsletter subscriptions. Built with PostgreSQL database integration and JWT-based authentication for the University of Balamand Advances in Computer Science course.",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamadAbouNaasse-cs/LaRama_Backend.git"
  },
  "keywords": [
    "ecommerce",
    "handcrafted",
    "api",
    "express",
    "nodejs",
    "postgresql",
    "jwt",
    "authentication",
    "shopping-cart",
    "orders",
    "products",
    "newsletter",
    "restful-api",
    "university-project",
    "advances-in-computer-science"
  ],
  "author": {
    "name": "Mohamad Abou Naasse",
    "email": "mohamad.abounaasse@student.balamand.edu.lb",
    "university": "University of Balamand",
    "course": "Advances in Computer Science",
    "business": "LaRama Handcrafted Products (Owner: Rama)"
  },
  "contributors": [
    {
      "name": "Rama (Business Owner)",
      "role": "Product Specialist & Business Requirements"
    }
  ],
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mohamadAbouNaasse-cs/LaRama_Backend/issues"
  },
  "homepage": "https://github.com/mohamadAbouNaasse-cs/LaRama_Backend#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5", 
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "configuration": {
    "database": {
      "type": "PostgreSQL",
      "version": ">=12.0",
      "required_extensions": ["uuid-ossp"],
      "connection_pooling": true
    },
    "authentication": {
      "type": "JWT",
      "algorithm": "HS256",
      "expiration": "24h"
    },
    "api": {
      "version": "v1",
      "format": "JSON",
      "cors_enabled": true
    }
  },
  "academic": {
    "university": "University of Balamand",
    "course": "Advances in Computer Science",
    "semester": "Fall 2024",
    "project_type": "E-commerce Platform Development",
    "student": "Mohamad Abou Naasse",
    "professor": "TBD",
    "submission_type": "Midterm Project",
    "technologies": [
      "Node.js",
      "Express.js",
      "PostgreSQL",
      "JWT Authentication",
      "RESTful API Design",
      "Database Connection Pooling"
    ]
  },
  "business": {
    "name": "LaRama Handcrafted Products",
    "owner": "Rama",
    "industry": "Handcrafted Products E-commerce",
    "products": [
      "Handcrafted Decorations",
      "Custom Neckties", 
      "Personalized Phone Cases",
      "Prayer Items",
      "Handmade Purses"
    ],
    "target_market": "Custom handcrafted product enthusiasts"
  }
}
